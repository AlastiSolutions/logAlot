{
  "name": "logalot",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "homepage": "https://github.com/AlastiSolutions/logAlot#readme",
  "maintainers": [
    "kourosh-alasti"
  ],
  "publisher": "kourosh-alasti",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Kourosh <coding@kouroshalasti.com>",
  "description": "TypeScript-first logging library",
  "scripts": {
    "dev": "deno run --allow-read --allow-write src/index.ts",
    "example:default": "deno run --allow-read --allow-write examples/default.ts",
    "example:configured": "deno run --allow-read --allow-write examples/configured.ts",
    "example:exports": "deno run --allow-read --allow-write examples/exports.ts",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "test": "tap run",
    "test:dump": "tap dump-config",
    "test:ci": "tap run --coverage",
    "publish": "npm publish",
    "prepare": "husky",
    "format": "prettier --write --config .prettierrc.yaml ."
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "keywords": [
    "NPM",
    "Node.JS",
    "TypeScript",
    "Logger"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlastiSolutions/logAlot.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.6.1",
    "eslint": "^9.11.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "tap": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  }
}
